<!DOCTYPE html>
<html>
<head>
  <title>TheLearnersGuild</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Sign Up</h4>
        </div>
        <div class="modal-body">
          <%= form_for @user, url: sign_up_path do |f| %>
            <div class="form-group">
            <%= f.label :first_name, "First Name" %>
            <%= f.text_field :first_name %>
            </div>
            <div class="form-group">
            <%= f.label :last_name, "Last Name" %>
            <%= f.text_field :last_name %>
            </div>
            <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email %>
            </div>
            <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <%= f.submit "Sign Up", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<nav class="navbar navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">The Learner's Guild</a>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
        <li><%= link_to current_user.full_name, user_path(current_user) %></li>
        <li><%= link_to "Sign Out", sign_out_path %></li>
      <% else %>
      <li><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
        Register
      </button></li>
      <% end %>
    </ul>

  </div>
</nav>

<div class="container">

  <%= flash[:notice] %>

<%= yield %>

</div>

</body>
</html>
